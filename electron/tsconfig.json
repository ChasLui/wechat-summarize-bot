{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "importHelpers": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "es2019",
      "DOM",
      "ESNext"
    ],
    "types": [
      "vite/client"
    ]
  },
  "exclude": [
    "node_modules",
    "./dist"
  ]
}
